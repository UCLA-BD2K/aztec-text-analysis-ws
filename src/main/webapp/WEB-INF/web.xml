<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <listener>
        <listener-class>edu.ucla.cs.scai.aztec.ws.ServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>SimilarityServlet</servlet-name>
        <servlet-class>it.zenitlab.jsonrpc.servlet.JsonRpcServlet</servlet-class>
        <init-param>
            <param-name>serviceClass</param-name>
            <param-value>edu.ucla.cs.scai.aztec.ws.SimilarityService</param-value>
        </init-param>
        <init-param>
            <param-name>serviceListKeyword</param-name>
            <param-value>wsd</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimilarityServlet</servlet-name>
        <url-pattern>/similarity</url-pattern>
    </servlet-mapping>      
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>it.zenitlab.jsonrpc.servlet.JsonRpcServlet</servlet-class>
        <init-param>
            <param-name>serviceClass</param-name>
            <param-value>edu.ucla.cs.scai.aztec.ws.SearchService</param-value>
        </init-param>
        <init-param>
            <param-name>serviceListKeyword</param-name>
            <param-value>wsd</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>      
    <servlet>
        <servlet-name>GrantServlet</servlet-name>
        <servlet-class>it.zenitlab.jsonrpc.servlet.JsonRpcServlet</servlet-class>
        <init-param>
            <param-name>serviceClass</param-name>
            <param-value>edu.ucla.cs.scai.aztec.ws.GrantService</param-value>
        </init-param>
        <init-param>
            <param-name>serviceListKeyword</param-name>
            <param-value>wsd</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GrantServlet</servlet-name>
        <url-pattern>/grant</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SummarizationServlet</servlet-name>
        <servlet-class>it.zenitlab.jsonrpc.servlet.JsonRpcServlet</servlet-class>
        <init-param>
            <param-name>serviceClass</param-name>
            <param-value>edu.ucla.cs.scai.aztec.ws.SummarizationService</param-value>
        </init-param>
        <init-param>
            <param-name>serviceListKeyword</param-name>
            <param-value>wsd</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SummarizationServlet</servlet-name>
        <url-pattern>/summarization</url-pattern>
    </servlet-mapping>     
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
